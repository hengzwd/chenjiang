<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:layout_marginTop="2dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:background="@color/material_green_100"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/oval_bg_measure_number"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/base_color"
                android:textSize="22sp" />
        </FrameLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:background="@color/material_green_100"
            android:gravity="right"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编号：" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="状态：" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间：" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="工况：" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修正值：" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="成果值：" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预压高度：" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.5"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/tv_number_item_rv_measured_result_data_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1" />

            <TextView
                android:id="@+id/tv_state_item_rv_measured_result_data_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1" />

            <TextView
                android:id="@+id/tv_date_item_rv_measured_result_data_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1" />

            <TextView
                android:id="@+id/tv_gongkuang_item_rv_measured_result_data_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1" />

            <TextView
                android:id="@+id/tv_xiuzhengzhi_item_rv_measured_result_data_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1" />

            <TextView
                android:id="@+id/tv_chengguozhi_item_rv_measured_result_data_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1" />

            <TextView
                android:id="@+id/tv_yuyagaodu_item_rv_measured_result_data_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1" />

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>